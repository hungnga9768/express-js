<%- include('header') %> <%- include('aside') %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= title %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
            <li class="breadcrumb-item active">Cài đặt hệ thống</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="box">
      <div class="box-body card card-primary">
        <div class="card">
          <div class="card-header"><%= title %></div>
          <div class="card-body">
            <form
              method="POST"
              action="/admin/setting/edit"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label><%= setting.note %></label>

                <% if (setting.key === 'logo' || setting.key === 'favicon') { %>
                <!-- Xem ảnh -->
                <img
                  src="<%= setting.value %>"
                  alt="<%= setting.key %>"
                  style="max-height: 60px; display: block; margin-bottom: 10px"
                />
                <input
                  type="file"
                  name="<%= setting.key %>_file"
                  class="form-control"
                  accept="image/*"
                />
                <!-- Giữ lại giá trị cũ nếu không chọn ảnh mới -->
                <input
                  type="hidden"
                  name="<%= setting.key %>_old"
                  value="<%= setting.value %>"
                />
                <% } else if (setting.key === 'about_us' || setting.key ===
                'seo_description') { %>
                <textarea
                  class="form-control"
                  name="<%= setting.key %>"
                  rows="3"
                >
<%= setting.value %></textarea
                >
                <% } else { %>
                <input
                  type="text"
                  class="form-control"
                  name="<%= setting.key %>"
                  value="<%= setting.value %>"
                />
                <% } %>
              </div>

              <div class="box-footer mt-3">
                <button type="submit" class="btn btn-success">
                  <i class="fa fa-save"></i> Lưu cài đặt
                </button>
                <a href="/admin" class="btn btn-default float-right">
                  <i class="fa fa-reply"></i> Quay lại trang chủ
                </a>
              </div>
            </form>
          </div>
          <div class="card-footer text-muted"></div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('footer') %>
