<%- include('header') %> <%- include('aside') %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1><%= title %></h1>
    </div>
  </section>

  <section class="content">
    <div class="box mb-4">
      <form method="GET" class="form-inline" role="form">
        <div class="form-group">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Tìm theo key hoặc ghi chú..."
            value="<%= search %>"
          />
        </div>
        <button type="submit" class="btn btn-primary ml-2">
          <i class="fa fa-search"></i> Tìm kiếm
        </button>
        <a href="/admin/setting/add" class="btn btn-success ml-2">
          <i class="fa fa-plus"></i> Thêm mới cấu hình
        </a>
      </form>
    </div>

    <div class="card-body p-0">
      <table class="table table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th>#</th>
            <th>Key</th>
            <th>Ghi chú</th>
            <th>Giá trị</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((item, index) => { %>
          <tr>
            <td><%= index.id %></td>
            <td><%= item.key %></td>
            <td><%= item.note %></td>
            <td>
              <% if (item.key === 'logo' || item.key === 'favicon') { %>
              <img src="<%= item.value %>" style="max-height: 50px" />
              <% } else { %> <%= item.value %> <% } %>
            </td>
            <td>
              <a
                href="/admin/setting/edit/<%= item.id %>"
                class="btn btn-sm btn-info"
              >
                <i class="fas fa-pencil-alt"></i> Sửa
              </a>
              <form
                action="/admin/setting/delete/<%= item.id %>"
                method="POST"
                style="display: inline"
                onsubmit="return confirm('Bạn có chắc muốn xóa không?')"
              >
                <button class="btn btn-sm btn-danger" type="submit">
                  <i class="fas fa-trash"></i> Xóa
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- PHÂN TRANG -->
    <div class="box-footer text-center">
      <ul class="pagination justify-content-center">
        <li class="page-item <%= Page === 1 ? 'disabled' : '' %>">
          <a
            class="page-link"
            href="?page=<%= Page - 1 %><%= search ? '&search=' + search : '' %>"
            >Trước</a
          >
        </li>

        <% for (let i = 1; i <= totalPage; i++) { %>
        <li class="page-item <%= i === Page ? 'active' : '' %>">
          <a
            class="page-link"
            href="?page=<%= i %><%= search ? '&search=' + search : '' %>"
            ><%= i %></a
          >
        </li>
        <% } %>

        <li class="page-item <%= Page === totalPage ? 'disabled' : '' %>">
          <a
            class="page-link"
            href="?page=<%= Page + 1 %><%= search ? '&search=' + search : '' %>"
            >Sau</a
          >
        </li>
      </ul>
    </div>
  </section>
</div>

<%- include('footer') %>
